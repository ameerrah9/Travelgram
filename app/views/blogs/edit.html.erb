<h1>Edit Blog <%=@blog.title%>!</h1>

<%= render partial: "layouts/errors", locals: {object: @blog} %>

<%= form_for(@blog) do |f| %>

  <%= f.label "Choose your City:" %>
  <%= f.collection_select :city_id, City.all, :id, :name, include_blank: true %><br>

  <br>
  <br>

  <%= f.label :title %><br>
  <br>
  <%= f.text_field :title %><br>
  <br>

  <%= f.label :content %><br>
  <br>
  <%= f.text_area :content %><br>
  <br>

  <%= f.submit "Edit Blog", class: "btn btn-primary btn-lg" %><br>
  <br>

<% end %>
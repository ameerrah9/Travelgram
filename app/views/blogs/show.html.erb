<h1><%= @blog.title %></h1>
<h2>Posted by: <%=@blog.user.username %></h2>

<div><%= @blog.content %></div>
<div><%= @blog.city %></div>

<p><%- link_to 'See All Comments', blog_comments_path(@blog) %></p>
<p><%- link_to 'Add a New Comment', new_blog_comment_path(@blog) %></p>

<h4>Comments:</h4>
<% @blog.comments.each do |c| %>
  <div><%= c.user.username %> </div>
  <div><%= link_to c.content, blog_comment_path(@blog.c) %> </div>
<% end %>